<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

  <welcome-file-list>
	<welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <!-- Mime-Type mapping -->
  <mime-mapping>
    <extension>manifest</extension>
    <mime-type>text/cache-manifest</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>js</extension>
    <mime-type>text/javascript</mime-type>
  </mime-mapping>

  <!-- Http Servlet for login --> 
  <servlet>
	<servlet-name>Login</servlet-name>
	<servlet-class>me.safewith.services.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
	<servlet-name>Login</servlet-name>
	<url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Http Servlet for serving public keys -->  
  <servlet>
    <servlet-name>PublicKeyServlet</servlet-name>
    <servlet-class>me.safewith.services.PublicKeyServlet</servlet-class>
  </servlet>  
  <servlet-mapping>
    <servlet-name>PublicKeyServlet</servlet-name>
    <url-pattern>/ws/publicKeys</url-pattern>
  </servlet-mapping>

  <!-- Http Servlet for serving private keys -->  
  <servlet>
    <servlet-name>PrivateKeyServlet</servlet-name>
    <servlet-class>me.safewith.services.PrivateKeyServlet</servlet-class>
  </servlet>  
  <servlet-mapping>
    <servlet-name>PrivateKeyServlet</servlet-name>
    <url-pattern>/ws/privateKeys</url-pattern>
  </servlet-mapping>

  <!-- Http Servlet for serving buckets -->  
  <servlet>
    <servlet-name>BucketServlet</servlet-name>
    <servlet-class>me.safewith.services.BucketServlet</servlet-class>
  </servlet>  
  <servlet-mapping>
    <servlet-name>BucketServlet</servlet-name>
    <url-pattern>/ws/buckets</url-pattern>
  </servlet-mapping>

  <!-- Http Servlet for uploading blobs -->  
  <servlet>
    <servlet-name>UploadBlobServlet</servlet-name>
    <servlet-class>me.safewith.services.UploadBlobServlet</servlet-class>
  </servlet>  
  <servlet-mapping>
    <servlet-name>UploadBlobServlet</servlet-name>
    <url-pattern>/ws/uploadBlob</url-pattern>
  </servlet-mapping>

  <!-- Http Servlet for serving blobs -->  
  <servlet>
    <servlet-name>ServeBlobServlet</servlet-name>
    <servlet-class>me.safewith.services.ServeBlobServlet</servlet-class>
  </servlet>  
  <servlet-mapping>
    <servlet-name>ServeBlobServlet</servlet-name>
    <url-pattern>/ws/blobs</url-pattern>
  </servlet-mapping>

  <!-- Make HTTPS mandatory -->
  <security-constraint>
    <web-resource-collection>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <!-- Users must be logged in for the following url patterns -->
  <security-constraint>
    <web-resource-collection>
      <url-pattern>/app/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>
  
  <security-constraint>
    <web-resource-collection>
      <url-pattern>/ws/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>

</web-app>
